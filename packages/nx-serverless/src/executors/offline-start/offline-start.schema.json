{
  "version": 2,
  "title": "serverless-offline offline start executor, version: 13.3.2(serverless@3.38.0)",
  "description": "serverless-offline offline start executor, version: 13.3.2(serverless@3.38.0)",
  "$comment": "https://www.serverless.com/plugins/serverless-offline#usage-and-command-line-options",
  "type": "object",
  "properties": {
    "cwd": {
      "type": "string",
      "description": "Current working directory"
    },
    "no-colors": { 
        "type": "boolean",
        "description": "Turn off colors in CLI output",
        "default": false
    },
    "serverless-file-ext": { 
      "type": "string", 
      "enum": ["ts", "js", "yml", "json"] ,
      "default": "ts",
      "description": "Serverless configuration file name, Default: serverless.ts"
    },
    "region": { 
        "type": "string",
        "description": "region where the stack should be deployed"
    },
    "aws-profile": { 
        "type": "string",
        "description": "AWS profile to use for deployment, Default: default"
    },
    "app": { 
        "type": "string",
        "description": "Serverless app name"
    },
    "org": { 
        "type": "string",
        "description": "Serverless organization name"
    },
    "use-local-credentials": { 
        "type": "boolean",
        "description": "Use local credentials instead of AWS_PROFILE"
    },
    "config": { 
        "type": "string",
        "description": "Path to serverless configuration file"
    },
    "stage": { 
        "type": "string",
        "description": "Stage to deploy to"
    },
    "param": { 
        "type": "string",
        "description": "Parameter to override in serverless configuration file"
    },
    "help": { 
        "type": "boolean",
        "description": "Shows this message and quits"
    },
    "version": { 
        "type": "boolean",
        "description": "Shows version information and quits"
    },
    "verbose": { 
        "type": "boolean",
        "description": "Shows verbose output"
    },
    "debug": { 
        "type": "boolean",
        "description": "Shows debug output"
    },
    "albPort": { "type": "string" },
    "corsAllowHeaders": { "type": "string" },
    "corsAllowOrigin": { "type": "string" },
    "corsDisallowCredentials": { "type": "boolean" },
    "corsExposedHeaders": { "type": "string" },
    "disableCookieValidation": { "type": "boolean" },
    "dockerHost": { "type": "string" },
    "dockerHostServicePath": { "type": "string" },
    "dockerNetwork": { "type": "string" },
    "dockerReadOnly": { "type": "string" },
    "enforceSecureCookies": { "type": "boolean" },
    "host": { "type": "string" },
    "httpPort": { "type": "string" },
    "httpsProtocol": { "type": "string" },
    "ignoreJWTSignature": { "type": "boolean" },
    "lambdaPort": { "type": "string" },
    "layersDir": { "type": "string" },
    "localEnvironment": { "type": "boolean" },
    "noAuth": { "type": "boolean" },
    "noPrependStageInUrl": { "type": "boolean" },
    "noTimeout": { "type": "boolean" },
    "prefix": { "type": "string" },
    "reloadHandler": { "type": "boolean" },
    "resourceRoutes": { "type": "boolean" },
    "terminateIdleLambdaTime": { "type": "boolean" },
    "useDocker": { "type": "boolean" },
    "useInProcess": { "type": "boolean" },
    "webSocketHardTimeout": { "type": "string" },
    "webSocketIdleTimeout": { "type": "string" },
    "websocketPort": { "type": "string" }
  },
  "required": []
}
