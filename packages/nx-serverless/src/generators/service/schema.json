{
  "$schema": "http://json-schema.org/schema",
  "$id": "Service",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for your new stack?"
    },
    "description": {
      "type": "string",
      "description": "",
      "x-prompt": "What is the stack about?"
    },
    "scope": {
      "type": "string",
      "description": "",
      "x-prompt": "What is your organization scope? (name in package.json, e.g. @<scope>/<package-name>)"
    },
    "directory": {
      "type": "string",
      "description": "",
      "default": "stacks",
      "$default": {
        "value": "stacks"
      }
    }
  },
  "required": ["name"]
}
